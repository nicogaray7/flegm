# Configuration du serveur
PORT=5000
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/flegm_prod
JWT_SECRET=${JWT_SECRET}
NODE_ENV=production

# URLs
API_URL=https://api.flegm.fr
FRONTEND_URL=https://flegm.fr

# Sécurité
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
CORS_ORIGINS=https://flegm.fr

# MongoDB
MONGODB_MAX_POOL_SIZE=20
MONGODB_MIN_POOL_SIZE=5
MONGODB_TIMEOUT_MS=30000

# Cache
CACHE_TTL=3600
REDIS_URL=${REDIS_URL}

# Vérifiez que toutes les configurations sont correctes
# Par exemple :
DATABASE_URL=postgresql://user:password@host:port/database
API_PORT=3000 