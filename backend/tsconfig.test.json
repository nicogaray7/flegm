{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "types": [
      "node",
      "jest",
      "express",
      "express-serve-static-core",
      "supertest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
} 